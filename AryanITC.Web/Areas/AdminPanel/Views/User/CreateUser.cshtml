@using AryanITC.Domain.ViewModels.Role
@using Microsoft.AspNetCore.Identity
@model AryanITC.Domain.ViewModels.ManagementUser.CreateUserViewModel
@{
    ViewData["Title"] = "CreateUser";
    List<RoleViewModel> roles = ViewData["Roles"] as List<RoleViewModel>;
}


@section AdminBreadCrumb
{
    <ul class="breadcrumb float-md-left">
        <li class="breadcrumb-item float-right"><a asp-action="Index" asp-controller="Home"><i class="zmdi zmdi-home"></i> آریان ITC </a></li>
        <li class="breadcrumb-item float-right"><a asp-action="CreateUser">افزودن کاربر جدید  </a></li>
    </ul>
}
<div class="container-fluid">
    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2> اطلاعات کاربران </h2>
                </div>
                <div class="body">

                    <form asp-controller="User" asp-action="CreateUser" method="post" enctype="multipart/form-data" >

                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-12 col-md-6 mb-2">
                                <div class="form-group">
                                    <label asp-for="FirstName"></label>
                                    <input type="text" class="form-control" asp-for="FirstName"/>
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 mb-2">
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <input type="text" class="form-control" asp-for="LastName">
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 mb-2">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input type="text" class="form-control" asp-for="Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>

                            <div class="col-12 col-md-6 mb-2">
                                <div class="form-group">
                                    <label asp-for="Mobile"></label>
                                    <input type="text" class="form-control" asp-for="Mobile">
                                    <span asp-validation-for="Mobile"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 mb-2">
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="text" class="form-control" asp-for="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>

                            <div class="col-10 col-md-6 mb-2">
                                <p class="help-block">
                                   آواتار
                                </p>
                                <input type="file" asp-for="UserAvatar" />
                                <span asp-validation-for="UserAvatar" class="text-danger"></span>
                            </div>
                            <div class="col-sm-2">
                                <div class="checkbox m-t-35">
                                    <input id="checkbox" type="checkbox" asp-for="IsSuperAdmin">
                                    <label for="checkbox" asp-for="IsSuperAdmin"> مدیر ویژه</label>
                                </div>
                            </div>
                        </div>
                     @if (roles != null)
                     {
                         <ul>
                             <span asp-validation-for="UserRoles"></span>
                             @foreach (var role in roles)
                             {
                                 <li>
                                     <input type="checkbox" name="UserRole" value="@role.RoleId"/>
                                     <label>@role.RoleTitle</label>
                                 </li>
                             }

                         </ul>
                     }
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-success btn-raised btn-round waves-effect" id="filterServiceBtn">افزودن کاربر جدید</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <!-- #END# Input -->
</div>
