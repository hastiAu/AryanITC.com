@model AryanITC.Domain.ViewModels.SiteSetting.SiteSettingViewModel
@{
    ViewData["Title"] = "ویرایش تنظیمات سایت";
}


@section AdminBreadCrumb
{
    <ul class="breadcrumb float-md-left">
        <li class="breadcrumb-item float-right"><a asp-action="Index" asp-controller="Home"><i class="zmdi zmdi-home"></i> آریان ITC </a></li>
        <li class="breadcrumb-item float-right"><a asp-action="Index">  ویرایش تنظیمات سایت </a></li>
    </ul>
}

<div>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorText))
    {
        <div class="alert alert-danger">
            <p>@ViewBag.ErrorText</p>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(ViewBag.SuccessText))
    {
        <div class="alert alert-success">
            <p>@ViewBag.SuccessText</p>
        </div>
    }

</div>
<div class="container-fluid">
    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2> تنظیمات سایت <strong> آریان ITC  </strong></h2>
                </div>
                <div class="body">

                    <form asp-action="Index" enctype="multipart/form-data">

                        <input type="hidden" asp-for="SiteSettingId" />

                        <div class="row clearfix">
                            <div class="col-md-12 col-lg-12">
                                <div class="panel-group" id="site-setting-accordion" role="tablist" aria-multiselectable="true">

                                    <!-- Website Accordion -->
                                    <div class="panel panel-primary">
                                        <div class="panel-heading" role="tab" id="headingOne_1">
                                            <h4 class="panel-title">
                                                <a role="button" data-toggle="collapse" data-parent="#site-setting" href="#Website" aria-expanded="true" aria-controls="collapseOne_1" class="">
                                                    وب سایت
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="Website" class="panel-collapse in collapse" role="tabpanel" aria-labelledby="headingOne_1" style="">
                                            <div class="panel-body">

                                                <div class="row clearfix">
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="SiteName"></label>
                                                            <input asp-for="SiteName" class="form-control" />
                                                            <span asp-validation-for="SiteName"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="SiteUrl"></label>
                                                            <input asp-for="SiteUrl" class="form-control" />
                                                            <span asp-validation-for="SiteUrl"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="SitePhone"></label>
                                                            <input asp-for="SitePhone" class="form-control fanum" />
                                                            <span asp-validation-for="SitePhone"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="SiteEmail"></label>
                                                            <input asp-for="SiteEmail" class="form-control" placeholder="آدرس ایمیل" />
                                                            <span asp-validation-for="SiteEmail"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="CopyRight"></label>
                                                            <input asp-for="CopyRight" class="form-control" />
                                                            <span asp-validation-for="CopyRight"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="Address"></label>
                                                            <input asp-for="Address" class="form-control" />
                                                            <span asp-validation-for="Address"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AboutUs"></label>
                                                            <input asp-for="AboutUs" class="form-control">
                                                            <span asp-validation-for="AboutUs"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="LogoFile"></label>
                                                            <input asp-for="LogoFile" class="form-control" />
                                                            <span asp-validation-for="LogoFile"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <!-- Service Accordion -->
                                    <div class="panel panel-primary">
                                        <div class="panel-heading" role="tab" id="headingTwo_1">
                                            <h4 class="panel-title">
                                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#site-setting" href="#service" aria-expanded="false" aria-controls="collapseTwo_1">
                                                    خدمات ما
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="service" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo_1" style="">
                                            <div class="panel-body">

                                                <div class="row clearfix">
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AryanServiceTitle"></label>
                                                            <input asp-for="AryanServiceTitle" class="form-control" />
                                                            <span asp-validation-for="AryanServiceTitle"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AryanServiceDescription"></label>
                                                            <input asp-for="AryanServiceDescription" class="form-control" />
                                                            <span asp-validation-for="AryanServiceDescription"></span>
                                                        </div>
                                                    </div>


                                                </div>

                                            </div>
                                        </div>
                                    </div>



                                    <!-- Portfolio Accordion -->
                                    <div class="panel panel-primary">
                                        <div class="panel-heading" role="tab" id="headingThree_1">
                                            <h4 class="panel-title">
                                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#site-setting" href="#Portfolio" aria-expanded="false" aria-controls="collapseThree_1">

                                                    نمونه کار ها

                                                </a>
                                            </h4>
                                        </div>
                                        <div id="Portfolio" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree_1">
                                            <div class="panel-body">

                                                <div class="row clearfix">
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AryanPortfolioTitle"></label>
                                                            <input asp-for="AryanPortfolioTitle" class="form-control" />
                                                            <span asp-validation-for="AryanPortfolioTitle"></span>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <!-- Host Price Accordion -->
                                    <div class="panel panel-primary">
                                        <div class="panel-heading" role="tab" id="headingThree_1">
                                            <h4 class="panel-title">
                                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#site-setting" href="#host-price" aria-expanded="false" aria-controls="collapseThree_1">

                                                    تعرفه هاست
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="host-price" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree_1">
                                            <div class="panel-body">

                                                <div class="row clearfix">
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AryanHostPriceTitle"></label>
                                                            <input asp-for="AryanHostPriceTitle" class="form-control" />
                                                            <span asp-validation-for="AryanHostPriceTitle"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AryanHostPriceDescription"></label>
                                                            <input class="form-control" asp-for="AryanHostPriceDescription">
                                                            <span asp-validation-for="AryanHostPriceDescription"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <!-- Domain Accordion -->
                                    <div class="panel panel-primary">
                                        <div class="panel-heading" role="tab" id="headingThree_1">
                                            <h4 class="panel-title">
                                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#site-setting" href="#Domain" aria-expanded="false" aria-controls="collapseThree_1">
                                                    دامنه های پر طرفدار

                                                </a>
                                            </h4>
                                        </div>
                                        <div id="Domain" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree_1">
                                            <div class="panel-body">

                                                <div class="row clearfix">
                                                    <div class="col-sm-12 col-md-6 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AryanDomainTitle"></label>
                                                            <input asp-for="AryanDomainTitle" class="form-control" />
                                                            <span asp-validation-for="AryanDomainTitle"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 mb-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AryanDomainDescription"></label>
                                                            <input asp-for="AryanDomainDescription" class="form-control">
                                                            <span asp-validation-for="AryanDomainDescription"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                
                                    <!-- Host Cloud Accordion -->
                                    <div class="panel panel-primary">
                                        <div class="panel-heading" role="tab" id="headingThree_1">
                                            <h4 class="panel-title">
                                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#site-setting" href="#Host-Cloud" aria-expanded="false" aria-controls="collapseThree_1">

                                                   هاست ابری
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="Host-Cloud" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree_1">
                                            <div class="panel-body">

                                                <div class="row clearfix">
                                                    <div class="col-sm-12 col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AryanCloudHostTitle"></label>
                                                            <input asp-for="AryanCloudHostTitle" class="form-control" />
                                                            <span asp-validation-for="AryanCloudHostTitle"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 md-2">
                                                        <div class="form-group">
                                                            <label class="control-label" asp-for="AryanCloudHostDescription"></label>
                                                            <input asp-for="AryanCloudHostDescription" class="form-control" />
                                                            <span asp-validation-for="AryanCloudHostDescription"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                            
                            </div>
                            <div class="col-12 mt-2">
                                <div class="form-group">
                                    <input type="submit" value="ویرایش" class="btn bg-amber btn-raised btn-round waves-effect" />
                                </div>
                            </div>

                </div>
                        </div>

                 </form> 

                </div>
            </div>
        </div>
    </div>
    <!-- #END# Input -->
</div>