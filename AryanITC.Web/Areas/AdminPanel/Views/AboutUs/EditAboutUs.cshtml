@model AryanITC.Domain.ViewModels.AboutUs.EditAboutUsViewModel
@{
    ViewData["Title"] = "ویرایش درباره ما";
}

@section AdminBreadCrumb
{
    <ul class="breadcrumb float-md-left">
        <li class="breadcrumb-item float-right">
            <a asp-action="Index" asp-controller="Home"><i class="zmdi zmdi-home"></i> آریان ITC </a>
        </li>
        <li class="breadcrumb-item float-right">
            <a asp-action="Index"> ویرایش درباره ما </a>
        </li>
    </ul>
}

 


<div class="container-fluid">
    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2> درباره ما</h2>
                </div>
                <div class="body">


                    <form method="post" asp-controller="AboutUs" asp-action="EditAboutUs" enctype="multipart/form-data">
                        <input type="hidden" asp-for="AboutUsId"/>
                        <input type="hidden" asp-for="AboutUsImage"/>
                        <div class="row">
                            <div class="col-12 col-md-6 mb-2">
                                <div class="form-group">
                                    <label class="control-label" asp-for="AboutUsTitle"></label>
                                    <input asp-for="AboutUsTitle" class="form-control"/>
                                    <span asp-validation-for="AboutUsTitle"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 mb-2">
                                <div class="form-group">
                                    <label class="control-label" asp-for="AboutUsLink"></label>
                                    <input asp-for="AboutUsLink" class="form-control"/>
                                    <span asp-validation-for="AboutUsLink"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label class="control-label" asp-for="AboutUsDescription"></label>
                                    <input asp-for="AboutUsDescription" class="form-control"/>
                                    <span asp-validation-for="AboutUsDescription"></span>
                                </div>
                            </div>


                            <div class="col-12 col-md-6 ">
                                <div class="form-group">
                                    <label class="control-label" asp-for="AboutUsImageFile"></label>
                                    <input type="file" asp-for="AboutUsImageFile">
                                    <span asp-validation-for="AboutUsImageFile"></span>
                                </div>
                            </div>

                            <div class="col-12 col-sm-6">
                                <div class="checkbox m-t-35">
                                    <input id="checkbox" type="checkbox" asp-for="IsActive">
                                    <label for="checkbox" asp-for="IsActive"></label>
                                </div>
                            </div>


                            <div class="col-12 ">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success btn-raised btn-round waves-effect" id="filterServiceBtn" value="ویرایش"/>
                                </div>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
        <!-- #END# Input -->
    </div>
</div>